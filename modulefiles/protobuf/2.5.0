#%Module1.0

### errors
module-log error null

### globals
set module  [module-info name]
set program [string map {" " "/"} [lrange [split $module {/}] 0 end-1]]
set release [lrange [split $module {/}] end end]

if [info exists env(NCE_PACKAGES)] {
  set nce_pkgs $env(NCE_PACKAGES)
} else {
  puts stderr "Error: NCE_PACKAGES not set"
  break
}

set approot $nce_pkgs/$module
set appname "Protobuf"
set appdesc "Protobuf 2.5.0"
set appurl  "https://code.google.com/p/protobuf/"
set license GPL

### help
proc ModulesHelp { } {
  global appname release appdesc appurl license
  puts stderr "Application : $appname"
  puts stderr "Description : $appdesc"
  puts stderr "License     : $license"
  puts stderr "URL         : $appurl"
}

module-whatis "$appname"

### conflict
if [info exists env(PROTOBUF_COMPILER)] {
  set current $env(PROTOBUF_COMPILER)
} else {
  set current $module
}
if { $module != $current } {
  if { [ is-loaded $current ] } {
    module unload $current
  }
}

### env
setenv PROTOBUF_COMPILER $module
setenv PROTOBUF_COMPILER_HOME $approot
setenv PROTOBUF_TC $approot

prepend-path PATH $approot/bin
prepend-path LD_LIBRARY_PATH $approot/lib
