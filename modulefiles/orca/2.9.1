#%Module1.0

### errors
# module-log error null

### globals
set module  [module-info name]
set program [string map {" " "/"} [lrange [split $module {/}] 0 end-1]]
set release [lrange [split $module {/}] end end]

### eszr
if [info exists env(NCE_PACKAGES)] {
  set nce_pkgs $env(NCE_PACKAGES)
} else {
  puts stderr "Error: NCE_PACKAGES not set"
  break
}

set approot $nce_pkgs/$program
set appname "ORCA"
set appdesc "2.9.1"
set appurl  "http://cec.mpg.de/forum/"
set license "http://cec.mpg.de/forum/license.html"

### help
proc ModulesHelp { } {
  global appname release appdesc appurl license
  puts stderr "Application : $appname"
  puts stderr "Description : $appdesc"
  puts stderr "License     : $license"
  puts stderr "URL         : $appurl"
}

module-whatis "$appname"

### conflict
if [info exists env(NCE_ORCA)] {
  set current $env(NCE_ORCA)
} else {
  set current $module
}
if { $module != $current } {
  if { [ is-loaded $current ] } {
    module unload $current
  }
}

### env
setenv NCE_ORCA $module
setenv NCE_ORCA_HOME $approot/$release
setenv NCE_ORCA $approot/$release
prepend-path PATH $approot/$release/bin:$approot/$release
prepend-path LD_LIBRARY_PATH $approot/$release/lib

### dep

module load openmpi/1.6-open64
