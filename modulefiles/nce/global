#%Module1.0

### errors
# module-log error null

### globals
set module  [module-info name]
set program [string map {" " "/"} [lrange [split $module {/}] 0 end-1]]
set release [lrange [split $module {/}] end end]

### eszr
if [info exists env(NCE_ROOT)] {
  set approot $env(NCE_ROOT)
} else {
  set approot /opt/$program
}

set appname "nce global"
set appdesc "NIIF Common Environment for global access"
set appurl  ""
set license GPL

### help
proc ModulesHelp { } {
  global appname release appdesc appurl license
  puts stderr "Application : $appname"
  puts stderr "Description : $appdesc"
  puts stderr "License     : $license"
  puts stderr "URL         : $appurl"
}

module-whatis "$appname"

### conflict
if [info exists env(NCE_MODE)] {
  set current $env(NCE_MODE)
} else {
  set current $module
}
if { $module != $current } {
  if { [ is-loaded $current ] } {
    module unload $current
  }
}

### env
setenv NCE_MODE $module
setenv NCE_ROOT $approot
setenv NCE_PACKAGES  $approot/packages/$release

### path
prepend-path PATH ${approot}/bin

### common variables
module load nce/common
